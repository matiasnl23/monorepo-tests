{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^build", "^check-types"]
    },
    "publish": {
      "dependsOn": ["^publish"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
